@model Employee_Management.Models.LoginModel

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form method="post" asp-action="Login">
            <div class="form-group">
                <label class="form-label">Username</label>
                <input class="form-control" asp-for="Username" required placeholder="Enter username" />
            </div>
            <div class="form-group">
                <label class="form-label">Password</label>
                <input class="form-control" asp-for="Password" required placeholder="Enter password" />
            </div>
            <input class="btn btn-primary" type="submit" value="Login" />
            @if ((string)ViewData["error"] != "")
            {
                <h3 style="color:red;">@ViewData["error"]</h3>
            }
        </form>
    </div>
    <div class="col-4"></div>
</div>